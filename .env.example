# Bedfellows Configuration
# Copy this file to .env and customize for your environment

# Database Configuration
# Options: sqlite, mysql, postgresql
DATABASE_TYPE=sqlite

# SQLite Configuration (default)
SQLITE_PATH=data/bedfellows.db

# MySQL Configuration (optional - uncomment if using MySQL)
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_USER=root
# MYSQL_PASSWORD=your_password
# MYSQL_DATABASE=fec

# PostgreSQL Configuration (optional - uncomment if using PostgreSQL)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=your_password
# POSTGRES_DATABASE=fec

# FEC Data Sources
FEC_BULK_DATA_URL=https://www.fec.gov/files/bulk-downloads/

# Data Directory
DATA_DIR=data

# Logging
LOG_LEVEL=INFO
LOG_FILE=bedfellows.log

# Web Interface
DATASETTE_PORT=8001
DATASETTE_HOST=127.0.0.1

# Score Calculation Weights
# These can be overridden here or left as defaults
# WEIGHT_EXCLUSIVITY=1.0
# WEIGHT_REPORT_TYPE=1.0
# WEIGHT_PERIODICITY=1.0
# WEIGHT_MAXED_OUT=1.0
# WEIGHT_LENGTH=1.0
# WEIGHT_RACE_FOCUS=1.0
